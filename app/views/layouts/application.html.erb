<!DOCTYPE html>
<html>
  <head>
    <title>MSM SIGNIN</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
  
    <p>
      <%= session[:user_id].inspect%>
    </p>
    <% if @current_user == nil %>
      <li>
        <a href="/user_sign_in">
          Sign in
        </a>
      </li>
      <li>
        <a href="/user_sign_up">
          Sign up
        </a>
      </li>

    <% else %>
      <%# <% matching_users = User.where({ :id = session[:user_id] }) %> %>
      <%# <% the_user = matching_users.first %> %>
      <li>
        <a href="/edit_user_profile">
          Edit <%= @current_user.first_name %>
        </a>
      </li>
      <li>
        <a href="user_sign_out">
          Sign out
        </a>
      </li>
      <li>
        <a href="bookmarks">
          My bookmarks
        </a>
      </li>
    <% end %>


    <p style="color: green">
      <%= notice %>
    </p>
    <p style="color: red">
      <%= alert %>
    </p>
    <%= yield %>
  </body>
</html>
